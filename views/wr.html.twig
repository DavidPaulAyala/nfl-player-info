<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Wide Receivers</title>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>{{ year }} Weekly Stats</h1>
      </div>
      <h2>Wide Receivers Week {{ week }}</h2>
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Position
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/qb/{{ week }}/{{ year }}">Quarterback</a></li>
          <li><a class="dropdown-item" href="/rb/{{ week }}/{{ year }}">Running Back</a></li>
          <li><a class="dropdown-item" href="/te/{{ week }}/{{ year }}">Tight End</a></li>
          <li><a class="dropdown-item" href="/k/{{ week }}/{{ year }}">Kicker</a></li>
          <li><a class="dropdown-item" href="/def/{{ week }}/{{ year }}">Defense</a></li>
        </ul>
      </div>
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Year
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/{{ pos }}/{{ week }}/2016">2016</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/{{ week }}/2015">2015</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/{{ week }}/2014">2014</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/{{ week }}/2013">2013</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/{{ week }}/2012">2012</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/{{ week }}/2011">2011</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/{{ week }}/2010">2010</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/{{ week }}/2009">2009</a></li>
        </ul>
      </div>
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Week
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/{{ pos }}/1/{{ year }}">Week 1</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/2/{{ year }}">Week 2</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/3/{{ year }}">Week 3</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/4/{{ year }}">Week 4</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/5/{{ year }}">Week 5</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/6/{{ year }}">Week 6</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/7/{{ year }}">Week 7</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/8/{{ year }}">Week 8</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/9/{{ year }}">Week 9</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/10/{{ year }}">Week 10</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/11/{{ year }}">Week 11</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/12/{{ year }}">Week 12</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/13/{{ year }}">Week 13</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/14/{{ year }}">Week 14</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/15/{{ year }}">Week 15</a></li>
          <li><a class="dropdown-item" href="/{{ pos }}/16/{{ year }}">Week 16</a></li>
        </ul>
      </div>
      <table>
        <tr>
            <th>Name</th>
            <th>Team</th>
            <th>FF Points</th>
            <th>Rec Yards</th>
            <th>Rec TDs</th>
            <th>Rush Yards</th>
            <th>Rush TDs</th>
            <th>Fumbles</th>
        </tr>
        {% for player in players %}
            <tr>
                <td>{{ player.getFirstName }} {{ player.getLastName}}</td>
                <td>{{ player.getTeam }}</td>
                <td>{{ player.getFfpoints}}</td>
                <td>{{ player.getRecYds}}</td>
                <td>{{ player.getRecTds}}</td>
                <td>{{ player.getRushYds}}</td>
                <td>{{ player.getRushTds}}</td>
                <td>{{ player.getFum}}</td>
            </tr>
        {% endfor %}
        </table>
        <br>
        <form action="/" method="get">
            <button class="btn btn-primary" type="submit">Home</button>
        </form>
    </div>
  </body>
</html>
