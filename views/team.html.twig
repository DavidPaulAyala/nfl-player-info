<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title>NFL Players</title>
  </head>
  <body>
    <div class="container">
      <a href='/admin'><button type='button' class='btn btn-primary'>Admin Page</button></a>
      <a href='/'><button type='button' class='btn btn-primary'>Home</button></a>
      <div class="jumbotron">
        <h1>Fanatsy Football</h1>
      </div>
      <nav class="navbar navbar-dark bg-success">
          <p class="navbar-brand">Top 15 Performers</p>
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
              <a class="nav-link" href="/qb">Quarterback</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/rb">Running Back</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/wr">Wide Receiver</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/te">Tight End</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/k">Kicker</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/def">Defense</a>
            </li>
          </ul>
      </nav>
      <h3>{{ team.getTeam }}</h3>
      <h4>Owner: {{team.getOwner }}</h4>
      {% if players %}
        <h4>Current Players</h4>
        {% for player in players %}
        <p>{{ player.getName }} -  {{ player.getPosition }} - {{ player.getTeam }}</p>
        {% endfor %}
      {% endif %}

      <form action='/add_player' method='post'>
        <h4>Add A Player</h4>
        <input type='hidden' name='team_id' value='{{ team.getId }}'>
        <label for='name'>Player Name:</label>
        <input type='text' name='name' id='name'>
        <label for='team'>Player's Team:</label>
        <input type='text' name='team' id='team'>
        <label for='position'>Player's Position:</label>
        <input type='text' name='position' id='position'>
        <button class='btn btn-success' type='submit'>Create!</button>
      </form>
    </div>
  </body>
